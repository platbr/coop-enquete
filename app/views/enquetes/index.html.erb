<div class="card-columns">
  <% @enquetes.each do |enquete| %>
      <div class="card p-3">
        <div class="card-body">
          <h5 class="card-title  text-center"><%= enquete.nome %></h5>
          <p class="card-text"><%= enquete.descricao %></p>
          <p class="card-text"><small class="text-muted">Finaliza em: <%= I18n.l(enquete.finaliza_em, format: :short) %></small></p>
          <a href="/enquetes/<%= enquete.id %>" class="btn btn-primary">Participar</a>
        </div>
      </div>
  <% end%>
</div>